= form_for @image do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg

  %p.field
    = f.file_field :file
  %p.actions
    = f.submit 'Save', class: 'btn btn-primary'
