#content.container
  .row
    .span12
      %h2.page-header
        = @page.title
      = form_for @page, url: {action: "update"} do |f|
        %p
          %a{href: 'http://zh.wikipedia.org/wiki/Markdown', target: '_blank'} 请使用 Markdown 编辑页面内容
        %p
          = f.text_area :content, class: 'form-control', rows: 10, required: 'required'
        #preview
          /none

        = f.submit '提交', class: 'btn btn-primary'
        = link_to '取消', { action: :show }, class: 'btn'
